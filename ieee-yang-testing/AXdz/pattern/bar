
            case even {
              leaf my-number-pattern-even {
                type string {
                  pattern '([02468]{1}|[1-9]{1}[02468]{1}|[1-9{1}[0-9]{1}[02468]{1}|[1-3]{1}[0-9]{2}[02468]{1}|40[0-9]{1}[024]{1})(-([2468]{1}|[1-9]{1}[02468]{1}|[1-9]{1}[0-9]{1}[02468]{1}|[1-3]{1}[0-9]{2}|4{1}[0-9]{2}[024]{1}))?(,([02468]{1}|[1-9]{1}[02468]{1}|[1-9{1}[0-9]{1}[02468]{1}|[1-3]{1}[0-9]{2}[02468]{1}|40[0-9]{1}[024]{1})(-([2468]{1}|[1-9]{1}[02468]{1}|[1-9]{1}[0-9]{1}[02468]{1}|[1-3]{1}[0-9]{2}|4{1}[0-9]{2}[024]{1}))?)*';
                }
                description "A leaf that accepts comma-separated individual values and ranges that accept and indicate only even numbers";
              }
            }
